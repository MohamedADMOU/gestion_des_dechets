    <label for="title">Nom médicament</label>
    <input required value = "<%= article.nom %>" type="text" name="nom" id="nom" class="form-control">
</div>
<div class="form-group">
    <label for="title">N° du lot</label>
    <textarea required name="Nlot" id="Nlot" class="form-control"><%= article.Nlot %></textarea>
</div>
<div class="form-group">
    <label for="title">Date de péremption</label>
    <div class="input-group date">
        <input id = "datePeremption" name = "datePeremption" type="text" class="form-control"><span class="input-group-addon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-event ml-2" viewBox="0 0 16 16">
